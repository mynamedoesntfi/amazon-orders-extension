{
  "manifest_version": 3,
  "name": "Amazon Orders Extension",
  "description": "Export Amazon cart data to CSV",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Amazon Orders Extension"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://oauth2.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "480022033266-bum80179g229dv8se0uprrf83gh92b92.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/your-orders/orders*"
      ],
      "js": [
        "content/index.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
